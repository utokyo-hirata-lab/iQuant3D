#TextWidget:
<ButtonWidget>:
  BoxLayout:
    orientation: 'vertical'
    size: root.size

    Label:
      size_hint_y: 0.02
      id: title_label
      font_size: 68
      text: root.text
      color: root.color

    #Image:
    #  source: 'brain-network-coherence.png'

    BoxLayout:
      orientation: 'horizontal'
      size: root.size
      size_hint_y: 0.3
      #padding: 20,30,20,10

      BoxLayout:
        orientation: 'vertical'
        size: root.size
        size_hint_x: 0.4
        #padding: 20,30,20,10

        BoxLayout:
          orientation: 'horizontal'
          size: root.size
          #size_hint_y: 0.3
          #padding: 20,30,20,10

          Button:
            id: loadData0
            text: 'Load-Data'
            font_size: 68
            on_press: root.notAvailable()

          BoxLayout:
            orientation: 'vertical'
            size: root.size
            #size_hint_y: 0.3
            #padding: 20,30,20,10

            CheckBox:
              #group: "gp01"
              id: g0
              #size: 10,10
              #pos: 10,130
              active: 1
              Label:
                size: self.texture_size
                #pos: 40,125
                color: [1,1,1,1]
                text: 'Sectioning'

              Label:
                id: l0
                size: self.texture_size
                #pos: 100,125
                text: 'Sectioning'
                color: root.color

            CheckBox:
              #group: "gp01"
              id: g1
              #size: 10,10
              #active: 1
              #pos: 10,100
              Label:
                size: self.texture_size
                #pos: 40,95
                text: 'Fix'
              Label:
                id: l1
                size: self.texture_size
                #pos: 100,95
                text: 'Fix'

            Button:
              text: 'Submit'
              font_size: 68
              #size:   100,30
              #pos:    25,5
              on_release: root.on_measure()

            Button:
              id: loadData2
              text: '2D-sectioning'
              font_size: 68
              on_press: root.notAvailable()

            Button:
              id: loadData3
              text: '3D-sectioning'
              font_size: 68
              on_press: root.notAvailable()

            Button:
              id: loadData4
              text: 'Animation'
              font_size: 68
              on_press: root.notAvailable()

        Button:
          id: button1
          text: 'Peak-detection'
          font_size: 68
          on_press: root.notAvailable()

        Button:
          id: button4
          text: 'Modeling'
          font_size: 68
          on_press: root.notAvailable()

      BoxLayout:
        orientation: 'vertical'
        size: root.size

        Label:
          size_hint_y: 0.1
          id: label2
          font_size: 68
          text: root.message
          color: root.color

        #Image:
        #  source: 'brain-network-coherence.png'

        BoxLayout:
          orientation: 'horizontal'
          size_hint_y: 0.1
          #size: root.size

          TextInput:
            #size_hint_y: 0.1
            text: 'File Path'

          CustomSpinner:
            size_hint_x: 0.1
            text: 'STD'
            values: '206Pb','57Fe','43Ca','Custom'
            #size_hint: None, None
            #size: 100, 44
            #pos_hint: {'center_x': .5, 'center_y': .5}
            on_text: root.on_spinner_change(self.text)

          Button:
            #size_hint_y: 0.1
            size_hint_x: 0.1
            id: submit
            text: 'Submit'
            font_size: 40
            on_press: root.notAvailable()

        Image:
          source: 'image/test.png'
        #Button:
        #  id: button2
        #  text: '3D modeling'
        #  font_size: 68
        #  on_press: root.notAvailable()

        Button:
          size_hint_y: 0.1
          id: button3
          text: 'Summary'
          font_size: 68
          on_press: root.notAvailable()
